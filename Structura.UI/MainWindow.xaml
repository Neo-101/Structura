<Window x:Class="Structura.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:core="clr-namespace:Structura.Core;assembly=Structura.Core"
        xmlns:local="clr-namespace:Structura.UI"
        mc:Ignorable="d"
        Title="Structura" Height="600" Width="800" Background="#1E1E1E">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay, FallbackValue=True}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="2"/>
        </Style>

        <HierarchicalDataTemplate DataType="{x:Type core:DirectoryNode}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="{Binding Name}" Foreground="Cyan" FontWeight="SemiBold"/>
                <TextBlock Margin="8,0,0,0" Foreground="Gray" FontSize="11" VerticalAlignment="Center">
                    <Run Text="[" Foreground="DarkGray"/>
                    <Run Text="F:" Foreground="Gray"/>
                    <Run Text="{Binding Stats.DirectFileCount, Mode=OneWay}" Foreground="#D0D0D0"/>
                    <Run Text="(T:" Foreground="Gray"/>
                    <Run Text="{Binding Stats.DeepFileCount, Mode=OneWay}" Foreground="#D0D0D0"/>
                    <Run Text=")" Foreground="Gray"/>
                    <Run Text=" | " Foreground="DarkGray"/>
                    <Run Text="D:" Foreground="Gray"/>
                    <Run Text="{Binding Stats.DirectDirCount, Mode=OneWay}" Foreground="#D0D0D0"/>
                    <Run Text="(T:" Foreground="Gray"/>
                    <Run Text="{Binding Stats.DeepDirCount, Mode=OneWay}" Foreground="#D0D0D0"/>
                    <Run Text=")" Foreground="Gray"/>
                    <Run Text="]" Foreground="DarkGray"/>
                </TextBlock>
                <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" FontSize="11">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Stats.IsAccessDenied}" Value="True">
                                    <Setter Property="Text" Value="[! Access Denied]"/>
                                    <Setter Property="Foreground" Value="Yellow"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <!-- Top Controls - Using WrapPanel for responsiveness -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="0,5,10,0">
                    <TextBlock Text="Path:" VerticalAlignment="Center" Foreground="#CCC" Margin="0,0,5,0"/>
                    <ComboBox IsEditable="True" ItemsSource="{Binding RecentPaths}" Text="{Binding SelectedPath, UpdateSourceTrigger=PropertyChanged}" Width="250" Margin="0,0,5,0" VerticalContentAlignment="Center"/>
                    <Button Content="..." Click="BrowseButton_Click" Padding="5,5" Width="30" Background="#444" Foreground="White" ToolTip="Browse Folder"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,10,0">
                    <CheckBox Content="Include Hidden" IsChecked="{Binding IncludeHidden}" VerticalAlignment="Center" Foreground="#CCC" ToolTip="Include hidden folders (e.g. .git, .obsidian) in scan" Margin="0,0,10,0"/>
                    
                    <TextBlock Text="Depth:" VerticalAlignment="Center" Foreground="#CCC" Margin="0,0,5,0"/>
                    <CheckBox Content="All" IsChecked="{Binding IsUnlimitedDepth}" VerticalAlignment="Center" Foreground="#CCC" Margin="0,0,5,0" ToolTip="Scan all subfolders"/>
                    <TextBox Text="{Binding MaxDepth}" IsEnabled="{Binding IsUnlimitedDepth, Converter={StaticResource InverseBoolConverter}}" Width="30" VerticalContentAlignment="Center" Background="#333" Foreground="#CCC" ToolTip="Max Scan Depth (0=Root Only)"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,10,0">
                    <Button Content="Scan" Click="ScanButton_Click" Padding="15,5" Margin="0,0,10,0" Background="#007ACC" Foreground="White" FontWeight="Bold" ToolTip="Quick scan for visual review"/>
                    <Button Content="ðŸ“Š" Click="ViewDistribution_Click" Padding="8,5" Margin="0,0,10,0" Background="#555" Foreground="White" ToolTip="View Depth Distribution Analysis"/>
                    <Button Content="Export &amp; Copy JSON" Click="ExportButton_Click" Padding="10,5" Margin="0,0,0,0" Background="#2E8B57" Foreground="White" FontWeight="Bold" ToolTip="Full scan, export to file, and copy file to clipboard"/>
                </StackPanel>
                
                <!-- Export Settings -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,10,0">
                     <TextBlock Text="To:" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,5,0"/>
                     <TextBox Text="{Binding ExportDirectory, UpdateSourceTrigger=PropertyChanged}" Width="100" VerticalContentAlignment="Center" IsReadOnly="True" Background="#333" Foreground="#CCC" ToolTip="Export Destination Folder"/>
                     <Button Content="âš™ï¸" Click="SetExportFolder_Click" Padding="5,2" Margin="2,0,0,0" Background="#444" Foreground="White" ToolTip="Change Export Folder"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Button x:Name="OpenFolderBtn" Content="ðŸ“‚ Open JSON Folder" Click="OpenFolderButton_Click" Padding="10,5" Margin="0,0,10,0" Background="#4682B4" Foreground="White" FontWeight="Bold" Visibility="Collapsed" ToolTip="Open the folder containing the exported JSON file"/>

                    <Button Content="âš ï¸ View Errors" Click="ViewErrors_Click" 
                            Visibility="{Binding HasErrors, Converter={StaticResource BoolToVis}}" 
                            Padding="10,5" Margin="0,0,10,0" Background="#8B0000" Foreground="White" FontWeight="Bold"/>
                    <Button Content="â„¹ï¸" Click="AboutButton_Click" Padding="8,5" Margin="0,0,10,0" Background="#444" Foreground="White" ToolTip="About Structura"/>
                    <TextBlock x:Name="StatusText" Text="Ready" VerticalAlignment="Center" Margin="0,0,0,0" Foreground="White"/>
                </StackPanel>
            </WrapPanel>

            <!-- Prompt Preview Section -->
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="PromptPreviewBox" Height="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Background="#252526" Foreground="#D4D4D4" BorderBrush="#3F3F46" Padding="5" IsReadOnly="True"/>
                <Button Grid.Column="1" Content="ðŸ“‹ Copy Prompt" Click="CopyPromptButton_Click" Padding="10,0" Margin="10,0,0,0" Background="#9932CC" Foreground="White" FontWeight="Bold" ToolTip="Copy optimized prompt for LLM analysis"/>
            </Grid>
        </StackPanel>

        <TreeView x:Name="ResultTree" Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="5"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  ItemsSource="{Binding RootNodes}"
                  Visibility="Visible"> 
        </TreeView>
    </Grid>
</Window>
