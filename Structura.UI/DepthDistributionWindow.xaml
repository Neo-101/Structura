<Window x:Class="Structura.UI.DepthDistributionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Structure Analysis" Height="500" Width="800" Background="#1E1E1E"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Vault Structure Analysis" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Foreground" Value="#E0E0E0"/>
                    <Setter Property="Background" Value="#333"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="#444" CornerRadius="4,4,0,0" Margin="2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,5"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#007ACC" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#333" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Depth Distribution">
                <DataGrid x:Name="StatsGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                          Background="#252526" RowBackground="#252526" AlternatingRowBackground="#2D2D30"
                          Foreground="#E0E0E0" HeadersVisibility="Column" BorderThickness="0"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#3F3F46">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                             <Setter Property="Padding" Value="5,2"/>
                             <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Depth" Binding="{Binding Depth}" Width="60"/>
                        
                        <DataGridTextColumn Header="Folders" Binding="{Binding FolderCount}" Width="80"/>
                        <DataGridTextColumn Header="Folder %" Binding="{Binding FolderPercent, StringFormat=N1}" Width="80"/>
                        
                        <DataGridTextColumn Header="Files" Binding="{Binding FileCount}" Width="80"/>
                        <DataGridTextColumn Header="File %" Binding="{Binding FilePercent, StringFormat=N1}" Width="80"/>
                        
                        <DataGridTextColumn Header="Size" Binding="{Binding SizeDisplay}" Width="90"/>
                        <DataGridTextColumn Header="Size %" Binding="{Binding SizePercent, StringFormat=N1}" Width="80"/>
                        
                        <DataGridTextColumn Header="Est. Tokens" Binding="{Binding TokenDisplay}" Width="*" FontWeight="Bold"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Breadth (Width) Distribution">
                 <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="How 'wide' are your folders? (Number of direct children)" Foreground="Gray" Margin="5"/>
                    
                    <DataGrid Grid.Row="1" x:Name="BreadthGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                          Background="#252526" RowBackground="#252526" AlternatingRowBackground="#2D2D30"
                          Foreground="#E0E0E0" HeadersVisibility="Column" BorderThickness="0"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#3F3F46">
                        <DataGrid.Resources>
                             <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                             <Style TargetType="DataGridCell">
                                 <Setter Property="Padding" Value="5,2"/>
                                 <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Children Count (Width)" Binding="{Binding Range}" Width="200"/>
                            <DataGridTextColumn Header="Folders Count" Binding="{Binding FolderCount}" Width="150"/>
                            <DataGridTextColumn Header="% of Folders" Binding="{Binding FolderPercent, StringFormat=N1}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                 </Grid>
            </TabItem>
        </TabControl>

        <Button Grid.Row="2" Content="Close" Click="CloseButton_Click" 
                HorizontalAlignment="Right" Width="80" Height="30" Margin="0,10,0,0"
                Background="#444" Foreground="White"/>
    </Grid>
</Window>