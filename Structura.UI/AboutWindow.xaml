<Window x:Class="Structura.UI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Structura" Height="250" Width="400" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Structura" FontSize="24" FontWeight="Bold" Foreground="Cyan" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Text="Directory Analysis Tool" FontSize="14" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,5,0,20"/>

        <Grid Grid.Row="2" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" Foreground="#888" Margin="0,0,10,5"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="VersionText" Foreground="#DDD" FontWeight="Bold"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Commit:" Foreground="#888" Margin="0,0,10,5"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="CommitText" Foreground="#DDD" FontFamily="Consolas"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Built:" Foreground="#888" Margin="0,0,10,5"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DateText" Foreground="#DDD"/>
        </Grid>

        <TextBlock Grid.Row="3" Text="Designed for high-performance scanning." 
                   Foreground="#666" FontSize="11" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,10"/>

        <Button Grid.Row="4" Content="Close" Click="CloseButton_Click" 
                Width="80" Padding="5" Background="#333" Foreground="White" BorderBrush="#555"/>
    </Grid>
</Window>